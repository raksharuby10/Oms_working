<style type="text/css">
   .text-center{
    /* other default style */
    grid-row: 2/3;
    grid-column: 2/3;
    margin: 0 auto;
    display: grid;
    grid-template-rows: 1fr 6fr 1fr;
    height: 300px;
  }
</style>
<div class="card text-center" style="background: #efa3631f;width: 50%;">
  <div class="card-header">
    <h5><%= @category.title %></h5>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @category.description %></p>
    <div class="card-body">
        <%= link_to "Edit", edit_category_path(@category), class:"btn btn-dark card-link" %>
        <%= link_to "Home", users_path , class:"btn btn-dark card-link"%>  
    </div>        
  </div>
  
</div>
