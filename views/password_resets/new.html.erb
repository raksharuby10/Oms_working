<h1>Forgot your password</h1>

<%= form_with url: password_reset_path do |f| %>
 
<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.email_field :email, class: "form-control" %>
</div>
</br>
<div class="form-group">
  <%= f.submit "Reset", class: "btn btn-dark" %>
</div>
 
<% end %>
 <%= link_to "Sign In",login_path %>