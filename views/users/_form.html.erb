<%= form_for @user, local: true  do |f| %>
  <div class="mb-3">
    <label class="form-label">Name</label>
    <%= f.text_field :name , class:"form-control"%>
    <% @user.errors.full_messages_for(:name).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div> 
  <div class="mb-3">
    <label class="form-label">Email</label>
    <%= f.text_field :email , class:"form-control"%>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>
  <div class="mb-3">
    <label class="form-label">Password</label>
    <%= f.text_field :password , class:"form-control"%>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>
  <div class="mb-3">
    <label class="form-label">Mobile Number</label>
    <%= f.text_field :mobile , class:"form-control"%>
    <% @user.errors.full_messages_for(:mobile).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>
  <div>
		<%= image_tag @user.image, size: '100x100' if @user.image.attached? %>
	</div>
  <div class="mb-3">
    <label class="form-label">Image</label>
    <%= f.file_field :image , class:"form-control"%>
    <% @user.errors.full_messages_for(:image).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>
 
  <div class="mb-3">
    <label class="form-label">Address</label>
    <%= f.text_field :address , class:"form-control"%>
    <% @user.errors.full_messages_for(:address).each do |message| %>
      <div style="color: red"><%= message %></div>
    <% end %>
  </div>
	<div>
    <%= f.submit class: "btn btn-dark" %>
	</div>

<% end %>